class StringTools

  # Returns whether the given string ends with the given expression.
  @ends_with: (text, end) ->
    text.substring(text.length - end.length) == end


  # Partitions the given string with the given regular expression.
  # Returns [text before regex match, regex match, text after regex match]
  @partition: (text, regex) ->
    match = regex.exec text
    return [text.toString(), '', ''] unless match
    match_pos = match.index
    match_text = match.toString()
    head = text.substring 0, match_pos
    tail = text.substring match_pos+match_text.length
    [head, match_text, tail]



module.exports = StringTools
