expect = require './test_helper'
Compiler = require '../src/compiler.coffee'


describe 'Compiler', ->

  describe 'compile_function', ->

    it 'compiles the source code of the given function', ->
      source = '(param) -> "The param is #{param}."'
      result = Compiler.compile_function source
      expect(typeof result).to.equal 'function'
      expect(result('foo')).to.equal 'The param is foo.'

