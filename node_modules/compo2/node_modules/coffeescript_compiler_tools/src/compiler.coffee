CoffeeScript = require 'coffee-script'
fs = require 'fs'


# Helper methods for compiling CoffeeScript.
class CoffeescriptCompilerTools

  # Compiles the given CoffeeScript source code
  # for a function into a JavaScript function.
  compile_function: (source) ->
    eval CoffeeScript.compile(source, bare: yes)


module.exports = new CoffeescriptCompilerTools()
