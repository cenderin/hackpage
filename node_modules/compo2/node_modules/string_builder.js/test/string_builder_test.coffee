expect = require './test_helper'
StringBuilder = require '../src/string_builder.coffee'


describe 'StringBuilder', ->
  beforeEach ->
    @string_builder = new StringBuilder()

  it 'returns an empty string for new StringBuilders', ->
    expect(@string_builder.toString()).to.equal ''

  it 'returns the given data', ->
    @string_builder.append('one ')
    @string_builder.append('two')
    expect(@string_builder.toString()).to.equal 'one two'

