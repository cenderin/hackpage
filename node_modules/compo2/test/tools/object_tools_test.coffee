[expect, sinon] = require('../test_helper')
ObjectTools = require '../../src/tools/object_tools.coffee'


describe 'ObjectTools', ->

  describe 'size', ->

    it 'returns 0 for empty objects', ->
      expect(ObjectTools.size {}).to.equal 0

    it 'returns 1 if the object has one key', ->
      expect(ObjectTools.size foo: 'bar').to.equal 1

    it 'returns 3 if the object has 3 keys', ->
      expect(ObjectTools.size one: 1, two: 2, three: 3).to.equal 3



