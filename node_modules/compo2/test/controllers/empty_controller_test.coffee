[expect, sinon] = require '../test_helper'
EmptyController = require '../../src/controllers/empty_controller.coffee'


describe 'EmptyController', ->

  describe 'execute', ->

    beforeEach ->
      @controller = new EmptyController()

    it 'calls the given callback with the this object correctly bound', (done) ->
      @controller.execute 'request', 'response', {}, ->
        done()


    it 'calls the given callback with the data', (done) ->
      @controller.execute 'request', 'response', {foo: 'bar'}, (data) ->
        expect(data.params).to.eql { foo: 'bar' }
        done()

